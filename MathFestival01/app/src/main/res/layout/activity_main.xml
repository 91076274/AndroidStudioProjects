<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.rbajor.mathfestival01.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a"
            android:layout_weight="1" />

        <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/A"
            android:layout_weight="1" />

        <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/B"
            android:layout_weight="1" />

        <Button
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/e"
            android:layout_below="@+id/A"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <Button
            android:text="F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/f"
            android:layout_below="@+id/B"
            android:layout_toEndOf="@+id/E"
            android:layout_weight="1" />

        <Button
            android:text="G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/g"
            android:layout_below="@+id/C"
            android:layout_toEndOf="@+id/F"
            android:layout_weight="1" />

        <Button
            android:text="H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/h"
            android:layout_below="@+id/C"
            android:layout_toEndOf="@+id/G"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="59dp">

        <Button
            android:text="I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i"
            android:layout_alignBaseline="@+id/L"
            android:layout_alignBottom="@+id/L"
            android:layout_alignParentEnd="true"
            android:layout_weight="1" />

        <Button
            android:text="J"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/j"
            android:layout_alignBaseline="@+id/J"
            android:layout_alignBottom="@+id/J"
            android:layout_toEndOf="@+id/J"
            android:layout_weight="1" />

        <Button
            android:text="K"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/k"
            android:layout_below="@+id/H"
            android:layout_toEndOf="@+id/K"
            android:layout_weight="1" />

        <Button
            android:text="L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/l"
            android:layout_below="@+id/J"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/m"
            android:layout_weight="1" />

        <Button
            android:text="N"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/n"
            android:layout_weight="1" />

        <Button
            android:text="O"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/o"
            android:layout_weight="1" />

        <Button
            android:text="P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/q" />

        <Button
            android:text="R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r"
            android:layout_weight="1" />

        <Button
            android:text="S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s" />

        <Button
            android:text="T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="U"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/u"
            android:layout_weight="1" />

        <Button
            android:text="V"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/v"
            android:layout_weight="1" />

        <Button
            android:text="W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/w"
            android:layout_weight="1" />

        <Button
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/x"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:text="Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/y"
            android:layout_weight="1" />

        <Button
            android:text="Z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/z"
            android:layout_weight="1" />

        <Button
            android:text="Enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
